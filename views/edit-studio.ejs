<%- include('partials/navbar') %>
    <div class="container bg-white">
        <div class="row">
            <div class="col-md-12">
                <section style="margin: 20px 0;">
                    <h2>Edit Studio</h2>
                    <form id="edit-studio">
                        <input type="hidden" value="<%= studio.id %>" name="studioId" id="studioId">

                        <div class="form-group">
                            <label for="studio_name">Studio Name</label>
                            <input type="text" class="form-control" id="studio_name" name="studio_name"
                                value="<%= studio.studio_name %>" required>
                        </div>
                        <div class="form-group">
                            <label for="location">Location</label>
                            <input type="text" class="form-control" id="location" name="location"
                                value="<%= studio.location %>" required>
                        </div>
                        <div class="form-group">
                            <label for="equipment_available">Equipment Available</label>
                            <input type="text" class="form-control" id="equipment_available" name="equipment_available"
                                value="<%= studio.equipment_available %>" required>
                        </div>
                        <div class="form-group">
                            <label for="hourly_rate">Hourly Rate</label>
                            <input type="text" class="form-control" id="hourly_rate" name="hourly_rate"
                                value="<%= studio.hourly_rate %>" required>
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" id="description" name="description"
                                rows="5"><%= studio.description %></textarea>
                        </div>
                        <div class="form-group">
                            <label for="image_url">Cover Image</label>
                            <input type="text" class="form-control" id="image_url" name="image_url"
                                value="<%= studio.image_url %>">
                        </div>
                        <div class="form-group">
                            <label for="img_url_1">Carousel Image 1</label>
                            <input type="text" class="form-control" id="img_url_1" name="img_url_1"
                                value="<%= studio.StudioImages[0].img_url_1 %>">
                        </div>
                        <div class="form-group">
                            <label for="img_url_2">Carousel Image 2</label>
                            <input type="text" class="form-control" id="img_url_2" name="img_url_2"
                                value="<%= studio.StudioImages[0].img_url_2 %>">
                        </div>
                        <div class="form-group">
                            <label for="img_url_3">Carousel Image 3</label>
                            <input type="text" class="form-control" id="img_url_3" name="img_url_3"
                                value="<%= studio.StudioImages[0].img_url_3 %>">
                        </div>
                        <button type="submit" class="btn btn-primary">Update Studio</button>
                    </form>
                </section>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>