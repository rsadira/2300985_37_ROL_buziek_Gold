<body>
    <%- include('partials/navbar') %>

        <!-- Tagline Section with Background Image -->
        <section class="tagline">
            <!-- Background image styles go here -->
            <div class="container">
                <h1>Fast and Reliable Studio Bookings.</h1>
            </div>
        </section>
        <!-- Available Studios Section -->
        <section class="available-studios">
            <div class="container">
                <hr class="pt-4">
                <h2>Available Studios</h2>
                <hr class="mt-4">
                <div class="row">
                    <div class="container-fluid">
                        <!-- Filter, Sort, and Search Section -->
                        <div class="row">
                            <div class="col-md-6">
                                <!-- Sort Dropdown -->
                                <label for="sort">Sort by:</label>
                                <select id="sort">
                                    <option value="price">Price</option>
                                    <option value="rating">Rating</option>
                                    <!-- Add more sorting options as needed -->
                                </select>
                            </div>
                            <div class="col-md-6">
                                <!-- Filter Options -->
                                <label for="filter">Filter by:</label>
                                <select id="filter">
                                    <option value="location">Location</option>
                                    <option value="facilities">Facilities</option>
                                    <!-- Add more filtering options as needed -->
                                </select>
                            </div>
                            <div class="col-md-12 mt-3">
                                <!-- Search Section -->
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" id="search-input"
                                        placeholder="Search for Studios">
                                    <div class="input-group-append">
                                        <button class="btn btn-primary" type="button" id="search-button">Search</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Studio Grid Goes Here -->
                        <div class="row">
                            <% musicStudios.forEach(function(studio) { %>
                                <div class="col-md-4">
                                    <div class="studio-card text-white">
                                        <img class="booking-studio-img" src="<%= studio.image_url %>"
                                            alt="<%= studio.studio_name %>">
                                        <hr class="mt-2">
                                        <h4>
                                            <%= studio.studio_name %>
                                        </h4>
                                        <p>Address: <%= studio.location %>
                                        </p>
                                        <p>Price per Hour: IDR <%= studio.hourly_rate %>
                                        </p>
                                        <!-- Add a link to the studio detail page with the studio's ID -->
                                        <a href="/studio-detail/<%= studio.id %>"
                                            class="btn btn-primary booking-book-now-btn">View
                                            Details</a>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
        </section>
        <hr class="mt-4">
        <%- include('partials/footer') %>

</body>