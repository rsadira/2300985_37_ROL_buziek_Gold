<body style="background-color: rgb(255, 255, 255);">
    <!-- Navbar -->
    <%- include('partials/navbar') %>
        <!-- Studio Details Container -->
        <div class="container pt-5 pb-5 bg-white">
            <div class="row">
                <!-- Studio Photos Carousel -->
                <div class="col-lg-6">
                    <div id="studioCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Carousel Indicators -->
                        <ul class="carousel-indicators">
                            <li data-target="#studioCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#studioCarousel" data-slide-to="1"></li>
                            <li data-target="#studioCarousel" data-slide-to="2"></li>
                            <!-- Add more indicators for additional photos -->
                        </ul>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="<%= studio.StudioImages[0].img_url_1 %>" class="d-block w-100" alt="Studio 1">
                            </div>
                            <div class="carousel-item">
                                <img src="<%= studio.StudioImages[0].img_url_2 %>" class="d-block w-100" alt="Studio 2">
                            </div>
                            <div class="carousel-item">
                                <img src="<%= studio.StudioImages[0].img_url_3 %>" class="d-block w-100" alt="Studio 2">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#studioCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#studioCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" ariahidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <!-- Studio Details -->
                <div class="col-lg-6 studio-details">
                    <h1>
                        <%= studio.studio_name %>
                    </h1>
                    <p><strong>Address:</strong>
                        <%= studio.location %>
                    </p>
                    <p><strong>Price per Hour:</strong> IDR <%= studio.hourly_rate %>
                    </p>
                    <p><strong>Description:</strong>
                        <%= studio.description %>
                    </p>
                    <p><strong>Facilities:</strong>
                        <%= studio.equipment_available %>
                    </p>
                    <p><strong>Pricing Details:</strong> Additional charges may apply for extra equipment and services.
                    </p>
                    <!-- Availability and Booking -->
                    <div class="mt-4">
                        <h3>Availability</h3>
                        <!-- Date Picker (you may need to include a date picker library) -->
                        <input type="date" id="bookingDate" class="form-control">
                        <!-- <button class="btn btn-primary mt-2" id="bookNowBtn">Book Now</button> -->
                        <a href="date-select.ejs" class="btn btn-primary mt-2" id="bookNowBtn">Book Now</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer -->
        <%- include('partials/footer') %>


</body>